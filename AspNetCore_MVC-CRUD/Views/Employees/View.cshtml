    <label for="" class="form-label">Address</label>
    <input type="text" class="form-control" asp-for="Address" > 
  </div>

  <div class="mb-3">
    <label for="" class="form-label">Position</label>
    <input type="text" class="form-control" asp-for="Position" > 
  </div>

